{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "cli": {
    "schematicCollections": ["@angular-eslint/schematics"]
  },
  "projects": {
    "@ngx-meta/core": {
      "projectType": "library",
      "root": "projects/ngx-meta/core",
      "sourceRoot": "projects/ngx-meta/core/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-meta/core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-meta/core/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-meta/core/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngx-meta/core/src/test.ts",
            "tsConfig": "projects/ngx-meta/core/tsconfig.spec.json",
            "karmaConfig": "projects/ngx-meta/core/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/ngx-meta/core/**/*.ts", "projects/ngx-meta/core/**/*.html"]
          }
        }
      }
    }
  }
}
